@model MIENNAMPOSTWEB.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<section id="main-container" class="main-container">

    <div class="container">
        <div class="row text-center">
            <div class="col">
                <h3 class="title-head">Quên mật khẩu - Bưu Chính Miền Nam</h3>
            </div>
        </div><!--/ Title row end -->

        <div class="row">
            <div class="col-sm-8">
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Nhập email đăng ký</h4>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Email Link" />
                    </div>
                }
            </div>

            <div class="col-md-4 col-12">
                <div class="sidebar sidebar-right">
                    <div class="widget">
                        <h3 class="widget-title">Liên hệ</h3>

                        <div class="contact-info-box">
                            <i class="ion-ios-location"></i>
                            <div class="contact-info-box-content">
                                <p>466/19 Nguyễn Tất Thành, Phường 18, Quận 4, Tp. Hồ Chí Minh</p>
                            </div>
                        </div>

                        <div class="contact-info-box">
                            <i class="ion-email"></i>
                            <div class="contact-info-box-content">
                                <p>cskh@miennampost.vn</p>
                            </div>
                        </div>

                        <div class="contact-info-box">
                            <i class="ion-android-call"></i>
                            <div class="contact-info-box-content">
                                <p>(028) 36 369 369</p>
                                <p>(+84) 090 690 088 8</p>
                            </div>
                        </div>

                    </div><!-- Navigation end -->

                </div><!-- Sidebar end -->
            </div><!--/ Content col 4 end -->
        </div>

    </div><!--/ Container end -->

</section><!-- Main container end -->




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
