
@{
    ViewBag.Title = "Tra cứu vận đơn";
}
<section id="main-container" class="main-container" ng-app="myApp" ng-controller="myCtrl">

    <div class="container">
        <div class="row text-center">
            <div class="col">
                <h3 class="title-head">TÌM KIẾM VẬN ĐƠN</h3>
            </div>
        </div><!--/ Title row end -->

        <div class="row">
            <div class="col-sm-8">
                <form ng-submit="tracuu()">
                    <div class="form-group">
                        <label><strong>Nhập mã vận đơn cần tra cứu:</strong></label>
                        <input type="text" class="form-control" ng-model="mailerId" />
                    </div>
                </form>

                <div class="row">
                    <div class="col-md-4">
                        <div class="contact-page-info">
                            <div class="contact-info-box">
                                <i class="ion-ios-star"></i>
                                <div class="contact-info-box-content">
                                    <h4>Vận đơn</h4>
                                    <p>{{mailer.Id}}</p>
                                </div>
                            </div>

                        </div>
                    </div><!-- Contact info col end -->

                    <div class="col-md-4">
                        <div class="contact-page-info">
                            <div class="contact-info-box">
                                <i class="ion-ios-star"></i>
                                <div class="contact-info-box-content">
                                    <h4>Khối lượng</h4>
                                    <p>{{mailer.weight}} GRAM</p>
                                </div>
                            </div>

                        </div>
                    </div><!-- Contact info col end -->

                    <div class="col-md-4">
                        <div class="contact-page-info">
                            <div class="contact-info-box">
                                <i class="ion-ios-star"></i>
                                <div class="contact-info-box-content">
                                    <h4>Dịch vụ</h4>
                                    <p>{{findService(mailer.service)}}</p>
                                </div>
                            </div>

                        </div>
                    </div><!-- Contact info col end -->

                    <div class="col-md-4">
                        <div class="contact-page-info">
                            <div class="contact-info-box">
                                <i class="ion-ios-star"></i>
                                <div class="contact-info-box-content">
                                    <h4>Gửi từ</h4>
                                    <p>{{mailer.sendFrom}}</p>
                                </div>
                            </div>

                        </div>
                    </div><!-- Contact info col end -->
                    <div class="col-md-4">
                        <div class="contact-page-info">
                            <div class="contact-info-box">
                                <i class="ion-ios-star"></i>
                                <div class="contact-info-box-content">
                                    <h4>Gửi đến</h4>
                                    <p>{{mailer.sendTo}}</p>
                                </div>
                            </div>
                        </div>
                    </div><!-- Contact info col end -->
                </div>

                <br />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Trạng thái</th>
                            <th>Thời gian</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in tracks">
                            <td>{{$index + 1}}</td>
                            <td>{{item.StatusDescribe}}</td>
                            <td>{{item.CreateDate + ' ' + item.CreateTime}}</td>
                        </tr>
                    </tbody>
                </table>
                <br/>
                <div class="bs-docs-section">
                    <h4 class="page-header">Hình ảnh</h4>
                    <img ng-repeat="item in images" src="{{'http://media.miennampost.vn/' + item.url}}" alt="image" />
                </div>
            </div>



            <div class="col-md-4">
                <div class="sidebar sidebar-right">
                    <div class="widget">
                        <h3 class="widget-title">Liên hệ</h3>

                        <div class="contact-info-box">
                            <i class="ion-ios-location"></i>
                            <div class="contact-info-box-content">
                                <p>466/19 Nguyễn Tất Thành, Phường 18, Quận 4, Tp. Hồ Chí Minh</p>
                            </div>
                        </div>

                        <div class="contact-info-box">
                            <i class="ion-email"></i>
                            <div class="contact-info-box-content">
                                <p>cskh@miennampost.vn</p>
                            </div>
                        </div>

                        <div class="contact-info-box">
                            <i class="ion-android-call"></i>
                            <div class="contact-info-box-content">
                                <p>(028) 36 369 369</p>
                                <p>(+84) 090 690 088 8</p>
                            </div>
                        </div>

                    </div><!-- Navigation end -->

                </div><!-- Sidebar end -->
            </div><!--/ Content col 4 end -->
        </div>

    </div><!--/ Container end -->

</section><!-- Main container end -->


@section scripts {
    
        <script type="text/javascript">
            var trackId = '@ViewBag.TrackId';
        </script>

        <script src="~/Scripts/tracks.js"></script>
   }
