@{
    ViewBag.Title = "Chuyển phát nhanh";
}

<div ng-app="myApp" ng-controller="myCtrl">
    <!-- Carousel -->
    <div id="main-slide" class="carousel slide" data-ride="carousel">

        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#main-slide" data-slide-to="0" class="active"></li>
            <li data-target="#main-slide" data-slide-to="1"></li>
            <li data-target="#main-slide" data-slide-to="2"></li>
        </ol><!--/ Indicators end-->
        <!-- Carousel inner -->
        <div class="carousel-inner">
            <div class="carousel-item active" style="background-image:url(../Content/images/slider/slide2.png)">

            </div><!--/ Carousel item end -->

            <div class="carousel-item" style="background-image:url(../Content/images/slider/slide1.png)">
            </div><!--/ Carousel item end -->
        </div><!-- Carousel inner end-->
        <!-- Controllers -->
        <a class="left carousel-control carousel-control-prev" href="#main-slide" data-slide="prev">
            <span><i class="fa fa-angle-left"></i></span>
        </a>
        <a class="right carousel-control carousel-control-next" href="#main-slide" data-slide="next">
            <span><i class="fa fa-angle-right"></i></span>
        </a>

    </div><!--/ Carousel end -->

    <section id="features" class="features">
        <div class="container">
            <div class="row features-row">

                <div class="feature-box col-lg-4 col-md-12">
                    <span class="feature-icon">
                        <i class="ion-social-buffer-outline"></i>
                    </span>
                    <div class="feature-box-content">
                        <a href="/donhang/create"> <h3 class="title-normal">Tạo đơn hàng</h3></a>
                        <p>Tạo nhanh đơn hàng online</p>
                    </div>
                </div><!--/ End 1st features -->

                <div class="feature-box two col-lg-4 col-md-12">
                    <span class="feature-icon">
                        <i class="ion-ios-search"></i>
                    </span>
                    <div class="feature-box-content">
                        <a href="#"><h3 class="title-normal">Tra cứu vận đơn</h3></a>
                        <p>Tra cứu hành trình đơn hàng</p>
                    </div>
                </div><!--/ End 2nd features -->

                <div class="feature-box three col-lg-4 col-md-12">
                    <span class="feature-icon">
                        <i class="ion-ios-person-outline"></i>
                    </span>
                    <div class="feature-box-content">
                       <a href="/home/contact"><h3 class="title-normal">Liên hệ</h3></a>
                        <p>Hệ thống tổng đài hoặt đồng 24/7 để phục vụ quý khách</p>
                    </div>
                </div><!--/ End 3rd features -->

            </div><!-- Content row end -->
        </div><!--/ Container end -->
    </section><!--/ Featured end -->


    <section id="about-us" class="about-us">
        <div class="container">
            <div class="row text-center">
                <div class="col">
                    <h3 class="title-head">Bưu Chính Miền Nam</h3>
                    <p class="title-description">
                        Dịch vụ chuyển phát hàng hóa, tài liệu trong và ngoài nước. Chúng tôi cũng cấp cho quý khách 1 dịch vụ vận chuyển đáng tin cậy, an toàn và nhanh chóng
                    </p>
                </div>
            </div><!--/ Title row end -->

            <div class="row">
                <div class="featured-tab clearfix">
                    <ul class="nav nav-tabs flex-column col-lg-3 col-md-6 float-left" role="tablist">
                        <li class="nav-item" ng-repeat="item in dichvues">
                            <a class="nav-link animated fadeIn" ng-class="{'active': item.isActive === true}" href="#{{item.tabid}}" data-toggle="tab">
                                <div class="tab-info"><h3>{{item.title}}</h3></div>
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content col-lg-9 col-md-6 float-right">
                        <div class="tab-pane animated fadeInRight" ng-class="{'active': item.isActive === true}" id="{{item.tabid}}" ng-repeat="item in dichvues">
                            <div class="tab-wrapper">
                                <p>{{item.content}}</p>
                            </div>
                        </div>
                    </div><!-- Featured tab end -->
                </div> <!-- COl End -->
            </div><!--/ Content row end -->
        </div><!--/ Container end -->
    </section><!-- About us end -->


    <section id="news" class="news">
        <div class="container">
            <div class="row text-center">
                <div class="col">
                    <h3 class="title-head">Tin tức</h3>
                </div>
            </div><!--/ Title row end -->

            <div class="row">
                <div class="col-lg-4 col-md-12" ng-repeat="item in baiviets">
                    <div class="latest-post">
                        <img class="img-fluid" src="~{{item.image}}" alt="img">
                        <div class="post-body">
                            <h4 class="post-title">
                                <a href="/baiviet/xem/{{item.code}}">{{item.title}}</a>
                            </h4>
                            <div class="post-text">
                                <p>
                                    {{item.content}}
                                </p>
                            </div>
                        </div>
                    </div><!-- Latest post end -->
                </div><!-- 1st post col end -->

               

            </div><!--/ Content row end -->
        </div><!--/ Container end -->
    </section><!--/ News end -->

    <section id="clients" class="clients">
        <div class="container">
            <div class="row text-center">
                <div class="col">
                    <h3 class="title-head">CHÚNG TÔI ĐANG PHỤC VỤ</h3>
                </div>
            </div><!--/ Title row end -->
            <div class="row">
                <div class="col-md-12 ml-lg-auto">
                    <ul class="row clients-row unstyled"></ul>

                </div><!-- Client logo end -->
            </div><!--/ Content row end -->
        </div><!--/ Container end -->
    </section><!--/ Clients end -->

</div>

@section scripts {
    <script src="~/Scripts/home.js"></script>
}